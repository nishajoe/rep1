@model List<Service_Repo_Crud_Manual.Models.Student>

<h2>Student List</h2>
<a href="/Student/Create">Add New</a>
<table border="1">
    <tr><th>Id</th><th>Name</th><th>Age</th><th>Actions</th></tr>
    @foreach (var s in Model)
    {
        <tr>
            <td>@s.Id</td>
            <td>@s.Name</td>
            <td>@s.Age</td>
            <td>
                <a href="/Student/Edit/@s.Id">Edit</a> |
                <a href="/Student/Delete/@s.Id">Delete</a>
            </td>
        </tr>
    }
</table>